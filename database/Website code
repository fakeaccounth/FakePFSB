<body>
    <h1>View Your Message</h1>
    <p id="message-content">Fetching the message...</p>
    <a id="open-link" href="#" target="_blank">Open in Telegram Bot</a>
    <script>
        // Parse URL parameters
        const urlParams = new URLSearchParams(window.location.search);
        const messageId = urlParams.get('rohit_18');
        
        if (messageId) {
            // Construct the bot link dynamically
            const botUsername = "Token_f_bot"; // Replace with your bot's username
            const telegramLink = `https://t.me/${botUsername}?start=${messageId}`;
            document.getElementById("open-link").href = telegramLink;

            // Display the message content dynamically
            document.getElementById("message-content").textContent = `Message ID: ${messageId}`;
        } else {
            document.body.innerHTML = "<h2>Invalid or Missing Message ID</h2>";
        }
    </script>
</body>
